/* page/my/my.wxss */

.box {
  width: 100%;
  height: 300rpx;
  display: flex;
  background-color: #e54c46;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.box-bottom {
  width: 100%;
  height: 100rpx;
  display: flex;
  background-color: #f5f5f5;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.row-box {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.row-box2 {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.between {
  padding-top: 24rpx;
  padding-bottom: 24rpx;
  justify-content: space-between;
}

.box-colume {
  display: flex;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
  background-color: white;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.colume-hov {
  display: flex;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: gray;
}

.img {
  width: 140rpx;
  height: 140rpx;
  border: 4rpx solid #fff;
  margin-bottom: 10rpx;
  border-radius: 100rpx;
}

.img2 {
  width: 80rpx;
  height: 80rpx;
  border: 0rpx solid white;
}

.img3 {
  width: 14rpx;
  height: 26rpx;
  margin-right: 30rpx;
}

.text {
  font-size: 30rpx;
  color: white;
}

.tv-normal {
  font-size: 30rpx;
  color: #212121;
}

.tv-normal2 {
  margin-left: 30rpx;
  font-size: 32rpx;
  color: #212121;
}

.tv-bottom{
  font-size: 20rpx;
  color: gray;
}

.tv-bottom::after{
  content: '1010-5335';
  color: #FFBE00;
  text-decoration: underline;
}

.tv-margin {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.split-line {
  background-color: #f5f5f5;
  width: 100%;
  height: 20rpx;
}

.split-line2 {
  background-color: #f5f5f5;
  width: 100%;
  height: 2rpx;
  margin-left: 20rpx;
}

.line {
  background-color: #e5e5e5;
  width: 100rpx;
  height: 2rpx;
}
