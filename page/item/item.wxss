/* page/item/item.wxss */

.item {
  background-color: goldenrod;
}

.box {
  display: flex;
  width: 100%;
  height: 200rpx;
}

.dire {
  display: flex;
  width: 100%;
  flex-direction: row;
  align-items: center;
}

.img {
  width: 150rpx;
  height: auto;
  align-self: stretch;
  margin-left: 20rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.icon {
  width: 30rpx;
  height: 30rpx;
}

.line {
  width: 100%;
  height: 0.5rpx;
  margin-left: 20rpx;
  background-color: #ebebeb;
  align-self: flex-end;
}

.title {
  margin-right: 10rpx;
  font-size: 34rpx;
}

.tv {
  margin-bottom: 6rpx;
  font-size: 24rpx;
}

.yellow_tv {
  color: #f7b948;
  font-size: 30rpx;
}

.gray {
  color: #999;
}

.align_yellow {
  align-items: baseline;
}

text {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.container_inner {
  flex: 7;
}

.container-btn {
  flex: 2;
  display: flex;
  height: 100%;
  align-items: center;
  justify-content: center;
}

.btn {
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 6rpx;
  padding-bottom: 6rpx;
  font-size: 20rpx;
  color: white;
  border-radius: 0rpx;
  text-align: center;
  background-color: #c33;
  overflow: hidden;
  align-self: center;
}

.btn::after {
  border-radius: 0rpx;
  border-width: 6rpx;
  border-color: orange;
}
